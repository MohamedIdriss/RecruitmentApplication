@model RecruitmentApplication.Models.OffreCandidate

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 0px;
        }

        h1 {
            color: #007bff;
        }

        .row {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
        }

        select.form-control {
            width: 100%;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <div class="row">
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Offre.Title)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Offre.Title)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Candidate.Name)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Candidate.Name)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Candidate.LastName)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Candidate.LastName)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Candidate.Framework)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Candidate.Framework)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Candidate.Langue)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Candidate.Langue)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Candidate.StageExperience)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Candidate.StageExperience)</dd>
            </dl>
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CandidateId" />
                    <input type="hidden" asp-for="OffreId" />

                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="Pending">Pending</option>
                            <option value="Accepted">Accepted</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                        <span asp-validation-for="Status"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="lescandidaturesSelonOffre">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
